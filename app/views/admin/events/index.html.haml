%p#notice= notice
%h1 Listing Events
= link_to 'New Event', new_admin_event_path
%table
  %thead
    %tr
      %th Title
      %th Performer
      %th Start date
      %th End date
      %th Location
      %th Price
      %th{:colspan => "3"}
  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.performer
        %td= event.start_date
        %td= event.end_date
        %td= event.location
        %td= event.price
        %td= link_to 'Show', [:admin, event]
        %td= link_to 'Edit', edit_admin_event_path(event)
        %td= link_to 'Destroy', [:admin, event], method: :delete, data: { confirm: 'Are you sure?' }
%br/
