<h1 class="thin-font">Listing Blogs</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.created_at.to_s(:short) %></td>
        <td><%= link_to 'Show', [:admin,blog] %></td>
        <td><%= link_to 'Edit', edit_admin_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', [:admin, blog], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <%= link_to 'New blog', new_admin_blog_path %>
</table>
